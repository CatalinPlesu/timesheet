{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "OpenTelemetry",
        "Args": {
          "endpoint": "http://localhost:5080/api/default/logs",
          "protocol": "HttpProtobuf",
          "headers": {
            "Authorization": "Basic cm9vdEBleGFtcGxlLmNvbTpDb21wbGV4cGFzcyMxMjM="
          }
        }
      }
    ]
  },
  "Database": {
    "ConnectionString": "Data Source=../timesheet.db",
    "EnableSensitiveDataLogging": true,
    "EnableDetailedErrors": true
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "http://localhost:5174",
      "http://localhost:8080"
    ]
  },
  "JwtSettings": {
    "SecretKey": "development-secret-key-DO-NOT-USE-IN-PRODUCTION-12345678",
    "Issuer": "TimeSheet.API",
    "Audience": "TimeSheet.Web",
    "ExpirationMinutes": 1440
  },
  "FrontendUrl": "http://localhost:5173"
}
