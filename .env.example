# Telegram Bot Configuration
BOT_TOKEN=your-telegram-bot-token-here

# JWT Configuration
JWT_SECRET_KEY=your-secure-random-key-at-least-32-characters-long-change-me-in-production
JWT_ISSUER=TimeSheet.API
JWT_AUDIENCE=TimeSheet.Web
JWT_EXPIRATION_MINUTES=60

# Port Configuration
API_PORT=5000
FRONTEND_PORT=3000
SEQ_PORT=5341

# Frontend Configuration
# VITE_API_URL is used at build time - set to the API URL that clients will access
VITE_API_URL=http://localhost:5000
FRONTEND_EXTERNAL_URL=http://localhost:3000

# Worker Intervals (format: HH:MM:SS)
AUTO_SHUTDOWN_CHECK_INTERVAL=00:03:00
FORGOT_SHUTDOWN_CHECK_INTERVAL=00:03:00
LUNCH_REMINDER_CHECK_INTERVAL=00:03:00
WORK_HOURS_ALERT_CHECK_INTERVAL=00:03:00

# Seq Configuration
SEQ_NO_AUTH=true
